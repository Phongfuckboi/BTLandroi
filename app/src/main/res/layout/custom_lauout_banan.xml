<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/txtTenBanAn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size18sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size10dp"
       />
    <ImageView
        android:id="@+id/imBanAn"
        android:layout_width="@dimen/size100dp"
        android:layout_height="@dimen/size100dp"
        android:src="@drawable/logobanan"
        android:layout_below="@+id/txtTenBanAn"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imGoiMon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imBanAn"
        android:layout_marginStart="@dimen/size5dp"
        android:layout_marginLeft="@dimen/size5dp"
        android:layout_marginTop="@dimen/size5dp"
        android:layout_marginEnd="@dimen/size5dp"
        android:layout_marginRight="@dimen/size5dp"
        android:src="@drawable/ic_sharp_fastfood_24"
        android:visibility="invisible"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imThanhToan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_monetization_on_24"
        android:layout_below="@+id/imBanAn"
        android:layout_toEndOf="@+id/imGoiMon"
        android:layout_margin="@dimen/size5dp"
        android:visibility="invisible"
        tools:ignore="ContentDescription"
        android:layout_toRightOf="@+id/imGoiMon" />

    <ImageView
        android:id="@+id/imAnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_cancel_24"
        android:layout_below="@+id/imBanAn"
        android:layout_toEndOf="@+id/imThanhToan"
        android:layout_margin="@dimen/size5dp"
        android:visibility="invisible"
        tools:ignore="ContentDescription"
        android:layout_toRightOf="@+id/imThanhToan" />



</RelativeLayout>